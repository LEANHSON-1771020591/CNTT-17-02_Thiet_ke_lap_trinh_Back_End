@model LAB2.Models.TodoItem

@{
    ViewData["Title"] = "Add New Task";
}

<h1>Add New Task</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Add" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Task" class="form-label">Task</label>
                <input asp-for="Task" class="form-control" placeholder="Nhập nội dung task..." />
                <span asp-validation-for="Task" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add Task" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}