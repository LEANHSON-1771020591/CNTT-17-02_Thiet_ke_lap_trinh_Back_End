@model IEnumerable<LAB2.Models.TodoItem>

@{
    ViewData["Title"] = "Todo List";
}

<h1>Todo List</h1>

<a asp-action="Add" class="btn btn-primary mb-3">Add Task</a>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>STT</th>
            <th>Task</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            @foreach (var item in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@item.Task</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"
                           onclick="return confirm('Bạn có chắc chắn muốn xóa task này?')">Delete</a>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">Không có task nào</td>
            </tr>
        }
    </tbody>
</table>